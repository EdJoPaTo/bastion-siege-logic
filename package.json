{
	"name": "bastion-siege-logic",
	"version": "2.5.2",
	"description": "",
	"license": "MIT",
	"repository": "EdJoPaTo/bastion-siege-logic",
	"author": {
		"name": "EdJoPaTo",
		"email": "bastion-siege-logic@edjopato.de",
		"url": "https://edjopato.de"
	},
	"engines": {
		"node": ">=12"
	},
	"scripts": {
		"build": "del dist && tsc",
		"prepack": "npm run build",
		"test": "tsc && xo && nyc ava"
	},
	"main": "dist/source",
	"types": "dist/source",
	"files": [
		"dist/source",
		"!*.test.*"
	],
	"keywords": [
		"bastion-siege",
		"telegram",
		"game"
	],
	"dependencies": {
		"emoji-tree": "^1.1.2"
	},
	"devDependencies": {
		"@sindresorhus/tsconfig": "^0.7.0",
		"@types/node": "^14.0.13",
		"ava": "^3.5.0",
		"del-cli": "^3.0.0",
		"nyc": "^15.0.0",
		"typescript": "^4.0.3",
		"xo": "^0.33.1"
	},
	"nyc": {
		"extension": [
			".ts"
		],
		"include": [
			"dist/source",
			"source"
		],
		"exclude": [
			"**/*.test.ts"
		],
		"reporter": [
			"lcov",
			"text"
		]
	},
	"xo": {
		"semicolon": false,
		"rules": {
			"ava/no-ignored-test-files": "off",
			"unicorn/no-reduce": "off",
			"@typescript-eslint/prefer-readonly-parameter-types": "error",
			"@typescript-eslint/no-unnecessary-condition": "error"
		},
		"overrides": [
			{
				"files": [
					"test/**/*",
					"**/*.test.*"
				],
				"rules": {
					"@typescript-eslint/prefer-readonly-parameter-types": "off"
				}
			}
		]
	}
}
