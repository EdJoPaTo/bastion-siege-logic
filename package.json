{
	"name": "bastion-siege-logic",
	"version": "2.0.2",
	"description": "",
	"license": "MIT",
	"repository": "EdJoPaTo/bastion-siege-logic",
	"author": {
		"name": "EdJoPaTo",
		"email": "edjopato@gmail.com",
		"url": "https://edjopato.de"
	},
	"engines": {
		"node": ">=8"
	},
	"scripts": {
		"build": "del dist && tsc",
		"prepack": "npm run build",
		"test": "tsc && xo && nyc ava"
	},
	"main": "dist/source",
	"types": "dist/source",
	"files": [
		"dist/source",
		"!*.test.*"
	],
	"keywords": [
		"bastion-siege",
		"telegram",
		"game"
	],
	"dependencies": {
		"emoji-tree": "^1.1.2"
	},
	"devDependencies": {
		"@sindresorhus/tsconfig": "^0.4.0",
		"@types/node": "^12.0.4",
		"@typescript-eslint/eslint-plugin": "^2.3.2",
		"@typescript-eslint/parser": "^2.3.2",
		"ava": "^2.0.0",
		"del-cli": "^3.0.0",
		"eslint-config-xo-typescript": "^0.19.0",
		"nyc": "^14.0.0",
		"typescript": "^3.4.2",
		"xo": "^0.25.3"
	},
	"ava": {
		"babel": false,
		"compileEnhancements": false
	},
	"nyc": {
		"extension": [
			".ts"
		],
		"include": [
			"dist/source",
			"source"
		],
		"exclude": [
			"**/*.test.ts"
		],
		"reporter": [
			"lcov",
			"text"
		]
	},
	"xo": {
		"extends": "xo-typescript",
		"semicolon": false,
		"extensions": [
			"ts"
		],
		"rules": {
			"import/named": "warn",
			"@typescript-eslint/strict-boolean-expressions": "off",
			"ava/no-ignored-test-files": "off",
			"@typescript-eslint/no-unnecessary-condition": [
				"error",
				{
					"ignoreRhs": true
				}
			],
			"@typescript-eslint/semi": [
				"error",
				"never"
			]
		}
	}
}
